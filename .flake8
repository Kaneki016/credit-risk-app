[flake8]
# Flake8 configuration for Credit Risk App

# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    ENV,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    frontend

# Ignore specific errors
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Select error codes to check
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    */migrations/*:E501

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
